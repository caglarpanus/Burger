<div class="image-holder">
    <img src="../assets/images/burger.jpg" width="350" height="250">
    <h2> WELCOME TO EAT-DA-BURGER </h2>
</div>

<div class="input">
    <input id="text">
    <button id="submit-button">Submit</button>
    <h3>Enter a burger you want to eat, and click "Submit" button!</h3>
</div>

<div class="not-eaten">
    <h2>NOT Eaten!!!</h2>
    {{#each burgers}}
        {{#unless devoured}}

        <ul>{{id}}. {{name}}<button class="devoure-button">Devoure</button></ul>

        {{/unless}}
   
    {{/each}}

</div>

<div class="eaten">
    <h2>Eaten!!!</h2>

    {{#each burgers}}
        {{#if devoured}}

            <ul>{{id}}. {{name}}</ul>

        {{/if}}
   
    {{/each}}
</div>